wget http://download.qemu-project.org/qemu-2.9.0.tar.xz
sudo tar -zxvf /src/fs/rootfs/devuan-armhf-defaultrootfs.tgz -C rootfs/
sudo tar -Jxvf qemu-src/qemu-2.9.0.tar.xz -C rootfs/tmp/
sudo dd if=/dev/zero of=./rootfs/var/swap bs=1M count=4096 
sudo mkswap rootfs/var/swap 
cat<<EOF| sudo chroot rootfs/
mount -t proc proc /proc
mount -t sysfs sys /sys
mount -o bind /dev /dev
mount -o bind /dev/pts /dev/pts
EOF
sudo chroot rootfs
cd /tmp/
apt-get update ;apt-get install build-essential git libtool pkg-config intltool-debian flex bison

